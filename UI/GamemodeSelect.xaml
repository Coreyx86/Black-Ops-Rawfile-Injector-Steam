<Window x:Class="BlackOpsGSCInjector.GamemodeSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackOpsGSCInjector"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Select The Game Mode" Height="323" Width="505" ResizeMode="NoResize">
    <ui:SimpleStackPanel Margin="12" Spacing="24">
        <TextBlock Text="Select Your Target Gamemode" TextAlignment="Center" Style="{StaticResource HeaderTextBlockStyle}" />
        <Button x:Name="btnSP"  HorizontalAlignment="Center" FontSize="30" Content="Singleplayer / Zombies" Click="btnSP_Click" />
        <Button x:Name="btnMP" HorizontalAlignment="Center" FontSize="30" Content="Multiplayer" Style="{StaticResource AccentButtonStyle}" Margin="152,-10,154,10" Click="btnMP_Click" />
    </ui:SimpleStackPanel>
</Window>
